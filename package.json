{
  "name": "project_jacked_2",
  "version": "1.0.0",
  "description": "This is the second version of the project_jacked backend, using express, sequelize, postgres, typescript and graphql",
  "main": "dist/server.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "rm -rf dist/ && npx tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "debug": "npm run dev -- --inspect",
    "dev": "NODE_ENV=development nodemon",
    "test": "jest --runInBand",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "migration:generate": "drizzle-kit generate:pg --schema=./src/db/schema/index.ts",
    "migration:push": "node -r esbuild-register src/db/migrate.ts",
    "migrate": "npm run migration:generate && npm run migration:push",
    "migrations:drop": "drizzle-kit drop"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cls-hooked": "^4.3.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/validator": "^13.11.7",
    "drizzle-kit": "^0.20.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cls-hooked": "^4.2.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "sequelize": "^6.35.2",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6"
  },
  "imports": {
    "type": "module",
    "#root/*.ts": "./*.ts"
  }
}
